/* pages/publish/publish.wxss */
.publish-page-container {
    padding-bottom: 100rpx; 
    background-color: #f8f8f8; 
    min-height: 100vh;
  }
  
  /* 头部标题 */
  .header-box {
    background-color: #fff;
    padding: 30rpx 32rpx; 
    border-bottom: 1rpx solid #f3f4f6; 
  }
  .header-title {
    font-size: 36rpx; 
    font-weight: bold;
    color: #1f2937; 
  }
  
  /* 表单主体 */
  .form-wrapper {
    padding: 32rpx; 
    display: flex;
    flex-direction: column;
    gap: 48rpx; 
  }
  
  /* 卡片区域 */
  .card-section {
    background-color: #fff;
    padding: 32rpx; 
    border-radius: 24rpx; 
    box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.05); 
    display: flex;
    flex-direction: column;
    gap: 32rpx; 
  }
  
  .section-title {
    font-size: 28rpx; 
    font-weight: bold;
    color: #374151; 
    margin-bottom: 16rpx; 
  }
  
  /* 表单组 */
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8rpx;
  }
  .form-label {
    font-size: 24rpx; 
    font-weight: 500;
    color: #6b7280; 
    margin-bottom: 4rpx; 
  }
  
  /* --- 类型选择 Radio Group 样式 (新增) --- */
  .type-selection {
    display: flex;
    justify-content: space-between;
    width: 100%;
  }
  .radio-label {
    flex: 1;
    text-align: center;
    padding: 16rpx 0;
    border: 1rpx solid #e5e7eb;
    border-radius: 12rpx;
    font-size: 28rpx;
    color: #4b5563; 
    margin-right: 16rpx;
    background-color: #f9fafb; 
  }
  .radio-label:last-child {
    margin-right: 0;
  }
  /* 选中状态 */
  .radio-checked {
      border-color: #2563eb; 
      background-color: #eff6ff; 
      color: #2563eb; 
  }
  .radio-label radio {
    /* 隐藏原生 radio 按钮 */
    position: absolute;
    left: -9999rpx;
  }
  
  
  /* --- Picker (Select) 样式 (原样式) --- */
  .picker-display {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 20rpx 24rpx; 
    background-color: #f9fafb; 
    border: 1rpx solid #e5e7eb; 
    border-radius: 16rpx; 
    font-size: 28rpx; 
  }
  .picker-placeholder {
    color: #9ca3af; 
  }
  .picker-text {
    color: #1f2937;
  }
  .arrow-icon {
    font-size: 16rpx;
    color: #9ca3af;
    margin-left: 10rpx;
  }
  
  /* --- Input/Textarea 样式 (原样式) --- */
  /* 简易输入框 (用于取件码) */
  .simple-input {
    box-sizing: border-box;
    width: 100%;
    padding: 20rpx 24rpx;
    background-color: #f9fafb;
    border: 1rpx solid #e5e7eb;
    border-radius: 16rpx;
    font-size: 28rpx;
    outline: none;
  }
  .input-with-icon {
    position: relative;
    width: 100%;
  }
  .input-icon {
    position: absolute;
    left: 24rpx; 
    top: 50%;
    transform: translateY(-50%);
    color: #6b7280; 
    font-size: 28rpx;
    z-index: 10;
  }
  .price-input {
    box-sizing: border-box;
    width: 100%;
    padding: 20rpx 24rpx;
    padding-left: 56rpx; 
    background-color: #f9fafb;
    border: 1rpx solid #e5e7eb;
    border-radius: 16rpx;
    font-size: 28rpx;
    font-weight: 500;
    outline: none;
  }
  .price-input:focus {
    border-color: #3b82f6;
    box-shadow: 0 0 0 1rpx #3b82f6;
  }
  
  .input-hint {
    font-size: 20rpx; 
    color: #9ca3af; 
    margin-top: 8rpx; 
  }
  
  /* Textarea */
  .description-textarea {
    box-sizing: border-box;
    width: 100%;
    padding: 24rpx; 
    background-color: #f9fafb;
    border: 1rpx solid #e5e7eb;
    border-radius: 16rpx;
    font-size: 28rpx;
    min-height: 160rpx; 
    outline: none;
    resize: none;
  }
  .description-textarea:focus {
    border-color: #3b82f6;
  }
  
  /* 提交按钮 */
  .submit-btn-wrapper {
    margin-top: 24rpx;
  }
  .shadow-btn {
    box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1);
  }