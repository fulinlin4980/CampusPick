/* pages/home/home.wxss */
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: #f7f7f7; /* 背景色 */
  }
  
  /* 1. 吸顶头部 (Sticky Header) */
  .header-sticky {
    position: sticky;
    top: 0;
    z-index: 10;
    background-color: #fff;
    padding: 20rpx 30rpx 20rpx 30rpx;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.05); /* 模拟 shadow-sm */
    box-sizing: border-box;
  }
  
  .page-title {
    font-size: 36rpx; 
    font-weight: bold;
    color: #333; 
    margin-bottom: 20rpx;
  }
  
  /* 2. 搜索框样式 */
  .search-box {
    position: relative;
    display: flex;
    align-items: center;
  }
  
  .search-input {
    width: 100%;
    background-color: #f3f4f6; /* bg-gray-100 */
    color: #333; 
    font-size: 28rpx; 
    border-radius: 16rpx; 
    padding: 16rpx 16rpx 16rpx 70rpx; /* 左侧留出图标位置 */
    box-sizing: border-box;
  }
  
  .search-icon {
    position: absolute;
    left: 20rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 36rpx;
    height: 36rpx;
    opacity: 0.5;
    z-index: 2; 
  }
  
  /* 3. 热门标签样式 */
  .hot-tags-scroll {
    white-space: nowrap; /* 确保标签横向排列 */
    margin-top: 24rpx; 
    height: auto; 
  }
  
  .tag-label {
    display: inline-block;
    font-size: 24rpx; 
    color: #666; 
    font-weight: bold; 
    margin-right: 16rpx;
    vertical-align: middle;
  }
  
  .hot-tag {
    display: inline-block;
    background-color: #f9fafb; /* bg-gray-50 */
    padding: 8rpx 24rpx; 
    border-radius: 9999rpx; 
    border: 1rpx solid #e5e7eb; 
    margin-right: 12rpx; 
    font-size: 24rpx; 
    color: #666;
    white-space: nowrap;
  }
  
  .hot-tag.tag-active {
    background-color: #eff6ff; /* 模拟 hover:bg-blue-50 */
    color: #3b82f6; /* 模拟 hover:text-blue-600 */
    border-color: #93c5fd;
  }
  
  /* 4. 列表区域 */
  .task-list-scroll {
    flex-grow: 1; 
    padding: 0 30rpx; /* 列表左右内边距 */
    box-sizing: border-box;
  }
  
  .task-list-content {
    padding-top: 20rpx;
  }
  
  /* 5. 占位符样式 */
  .empty-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0; 
    color: #9ca3af; 
    font-size: 30rpx;
  }
  
  .empty-icon {
    width: 96rpx; 
    height: 96rpx;
    opacity: 0.3;
    margin-bottom: 16rpx;
  }
  
  .empty-subtext {
    font-size: 24rpx;
    margin-top: 10rpx;
  }