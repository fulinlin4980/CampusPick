.container {
    padding: 30rpx 0 160rpx;
    background-color: #f7f7f7;
    min-height: 100vh;

    display: flex;
    flex-direction: column;
    align-items: center; /* 让所有卡片居中 */
}
.settlement-card {
    width: calc(100% - 60rpx);  /* 统一白卡宽度 */
    max-width: 700rpx;          /* 防止平板拉太宽 */
    margin-bottom: 20rpx;

    background-color: #ffffff;
    padding: 30rpx;
    border-radius: 12rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.cell-label {
    width: 160rpx;     /* 固定宽度关键 */
    color: #999999;
    flex-shrink: 0;
}
.cell-content {
    flex: 1;
    color: #333333;
    text-align: left;     /* 不要再 right 对齐 */
    word-break: break-all;
}
.section-title {
    font-size: 30rpx;
    color: #333;
    font-weight: 600;

    padding-left: 20rpx;
    margin-bottom: 24rpx;

    border-left: 6rpx solid #3498db; 
    line-height: 1;
}
.info-cell.multiline {
    display: block;
}

.info-cell.multiline .cell-content {
    margin-left: 160rpx;  /* 和 label 对齐 */
}
.info-cell {
    border-bottom: 1rpx solid rgba(0,0,0,0.04);
}
